{{#if isShowForm}}
  <form class="">
    <label for="author">Author: </label>
    {{input value=author}}
    <label for="content">Question: </label>
    {{input value=content}}
    <label for="notes">Notes: </label>
    {{input value=notes}}
    <button type="button" {{action 'submitQuestion'}}>Submit</button>
  </form>
{{else}}
  <button type="button" {{action 'showForm'}}>Add Question</button>
{{/if}}
